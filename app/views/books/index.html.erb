 <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container pt-3">
  <div class="row">
   <div class="col-md-3">
    <h2>User info</h2>
     <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100'%>
     <table class="table">
      <tr><th>name</th>
      <td><%= @user.name %></td></tr>
      <tr><th>introduction</th>
      <td><%= @user.introduction %></td></tr>
     </table>
     <%= link_to  edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block", method: :get do %>
     <i class="fas fa-user-cog" ></i>
     <% end %>

    <h2 class="mt-3">New book</h2>
     <%= form_with model: @book, local:true do |f| %>
     <p>Title</p>
     <%= f.text_field :title, class: "w-100" %>
     <p>Opinion</p>
     <%= f.text_field :body, class: "w-100"%></br>
     <%= f.submit 'Create Book', class: 'btn btn-success mt-3' %>
     <% end %>
   </div>

  <div class="col-md-8 offset-md-1">
   <%= render 'searchs/form' %><br>
   <h2>Books</h2>
    <table class="table">
     <tr><th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th></th>
     </tr>
     <% @books.each do |book| %>
     <tr><td><%= link_to user_path(book.user.id) do %>
     <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" , size:'40x40' %></td><% end %>
     <td><%= link_to book.title, book_path(book.id) %></td>
     <td><%= book.body %></td>
     <td><% if book.favorited_by?(current_user) %>
       <p><%= link_to book_favorites_path(book.id), method: :delete do %>
          ♥<%= book.favorites.count %>
         <% end %></p>
         <% else %>
        <p><%= link_to book_favorites_path(book.id), method: :post do %>
        ♡<%= book.favorites.count %>
        <% end %></p>
         <% end %></td>
     <td><%= link_to "コメント数: #{book.book_comments.count} ", book_path(book.id) %></td>
     </tr>
     <% end %>
    </table>
  </div>
 </div>
</div>